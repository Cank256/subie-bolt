# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Supabase Configuration (if using Supabase for auth/realtime)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@subie.com

# SMS/WhatsApp Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Bank Account Integration (Plaid)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# File Upload (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=subie-uploads

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Rate Limiting (Redis - Optional)
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
APP_NAME=Subie

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_BANK_INTEGRATION=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# API Rate Limits
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900000

# Subscription Plans Configuration
FREE_PLAN_SUBSCRIPTION_LIMIT=10
STANDARD_PLAN_SMS_LIMIT=50
PREMIUM_PLAN_SMS_LIMIT=300

# Notification Configuration
DEFAULT_REMINDER_DAYS=3
MAX_NOTIFICATION_RETRIES=3
NOTIFICATION_BATCH_SIZE=100

# Currency Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD,JPY

# Timezone Configuration
DEFAULT_TIMEZONE=UTC

# Session Configuration
SESSION_TIMEOUT=86400000
REMEMBER_ME_TIMEOUT=2592000000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Development Tools
ENABLE_DEBUG_LOGS=true
ENABLE_QUERY_LOGGING=false

# RevenueCat Configuration
NEXT_PUBLIC_REVENUECAT_API_KEY=your_revenuecat_public_api_key
REVENUECAT_SECRET_KEY=your_revenuecat_secret_key

# Flutterwave Configuration
NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key